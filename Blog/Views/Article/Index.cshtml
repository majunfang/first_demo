@model IEnumerable<Blog.Models.UIData>
@using Blog.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFont.cshtml";
}

<aside>
    <div class="l_box">
        <div class="search">
            <form action="~/Article/Index" method="get" name="searchform" id="searchform">
                <input name="keyboard" id="keyboard" class="input_text" placeholder="请输入关键字词" type="text">

                <input class="input_submit" value="搜索" type="submit">
            </form>
        </div>
        <div class="fenlei">
            <h2>文章分类</h2>
            <ul>
               
                    @{
                        foreach (var item in ViewBag.B)
                        {
                            <li><a href="/">@item.Type（@item.Count）</a></li>
                        }
                    }
              
            </ul>
        </div>
        <div class="tuijian">
            <h2>站长推荐</h2>
            <ul>
                @{
                    foreach (var item in ViewBag.C)
                    {
                        <li><a href="/Home/Detail/@item.Id">@item.Title</a></li>
                    }
                }

            </ul>
        </div>
        <div class="tuijian">
            <h2>点击排行</h2>
            <ul>
                @{
                    foreach (var item in ViewBag.D)
                    {
                        <li><a href="/Home/Detail/@item.Id">@item.Title</a></li>
                    }
                }
         
            </ul>
        </div>
        <div class="cloud">
            <h2>标签云</h2>
            <ul>
                @{
                    foreach (var item in ViewBag.E)
                    {
                        <a href="/">@item</a>
                    }
                }
               
            </ul>
        </div>
        <div class="guanzhu">
            <h2>关注我 么么哒</h2>
            <ul>
                <img src="~/images/wx.jpg">
            </ul>
        </div>
    </div>
</aside>
<div class="r_box">
    <main>
        @{
            foreach (var item in ViewBag.A)
            {
                <li>
                    <i><a href="/Home/Detail/@item.Id"><img src="~/@item.PicUrl"></a></i>
                    <h3><a href="/Home/Detail/@item.Id">@item.Title</a></h3>
                    <p>@item.Data.ToString()</p>
                </li>
            }
        }
        <div class="pagelist"><a class="allpage"><b>99</b></a>&nbsp;&nbsp;<a href="#" class="curPage">1</a>&nbsp;&nbsp;<a href="#" onclick="page(2)">2</a>&nbsp;&nbsp;<a href="#" onclick="page(3)">3</a>&nbsp;&nbsp;<a href="#" onclick="page(4)">4</a>&nbsp;&nbsp;<a href="#" onclick="page(5)">5</a>&nbsp;&nbsp;<a href="#" onclick="page(6)">6</a>&nbsp;&nbsp;<a href="#" onclick="page(7)">7</a>&nbsp;&nbsp;<a href="#" onclick="page(8)">8</a>&nbsp;&nbsp;<a href="#" onclick="page(9)">9</a>&nbsp;&nbsp;<a href="#" onclick="page(2)">下一页</a></div>
    </main>
</div>