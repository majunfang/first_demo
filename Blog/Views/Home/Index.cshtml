
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFont.cshtml";
}
@model List<Blog.Models.UIData>
@using Blog.Models;
<aside>
    <div class="l_box" id="stickMe">
        <div class="about_me">
            <h2>关于我</h2>
            <ul>
                <a href="~/About/index">
                    <i><img src="~/@ViewBag.B.SelfPhoto"></i>
                    <p><b>@ViewBag.B.UserName</b>@ViewBag.B.SelfSlogo</p>
                </a>
               
            </ul>
        </div>
        <div class="wdxc">
            <h2>我的相册</h2>
            <ul>
                @{
                    foreach (var item in ViewBag.C)
                    {
                        <li><a href="/Home/Detail/@item.BelongToArticles"><img src="~/@item.PicUrl"></a></li>
                    }
                }
               
            </ul>
        </div>
        <div class="search">
            <form action="~/Home/Index" method="get" name="searchform" id="searchform">
                <input name="keyboard" id="keyboard" class="input_text" placeholder="请输入关键字词" type="text">
            
                <input class="input_submit" value="搜索" type="submit">
            </form>
        </div>
        <div class="fenlei">
            <h2>文章分类</h2>
            <ul>
                @{
                    foreach (var item in ViewBag.D)
                    {
                        <li><a href="/">@item.Type（@item.Count）</a></li>
                    }
                }
            </ul>
        </div>
        <div class="tuijian">
            <h2>站长推荐</h2>
            <ul>
                @{
                    foreach (var item in ViewBag.E)
                    {
                        <li><a href="/Home/Detail/@item.Id">@item.Title</a></li>
                    }
                }
               
            </ul>
        </div>
        <div class="links">
            <h2>友情链接</h2>
            <ul>
                <a href="http://www.yangqq.com">杨青个人博客</a>
                <a href="http://www.yangqq.com">杨青博客</a>
            </ul>
        </div>
        <div class="guanzhu">
            <h2>关注我 么么哒</h2>
            <ul>
                <img src="~/images/wx.jpg">
            </ul>
        </div>
    </div>
</aside>
<div class="r_box">
    <main>
        @{
            foreach (var item in ViewBag.A)
            {
                <li>
                    <i><a href="/Home/Detail/@item.Id"><img src="~/@item.PicUrl"></a></i>
                    <h3><a href="/Home/Detail/@item.Id">@item.Title</a></h3>
                    <p>@item.Data.ToString()</p>
                </li>
            }
        }
      
    </main>
</div>
