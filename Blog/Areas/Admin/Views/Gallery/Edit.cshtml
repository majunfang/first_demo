@model List<Blog.Models.DBModel.Articles>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="stylesheet" href="~/Areas/Admin/css/x-admin.css" media="all">
    <style>
        #addForm {
            padding-right: 50px;
            padding-top: 30px;
            padding-bottom: 30px;
        }
    </style>
</head>
<body>
    <form class="layui-form" id="addForm" onsubmit="return false;">
        <input type="hidden" name="Id" id="Id" value="@ViewBag.B.Id"/> 
        <div class="layui-form-item">
            <label class="layui-form-label">上传图片</label>
            <div class="layui-input-block">
                <input id="uploadImg" type="file" name="uploadImg">
                <input id="PicUrl"  value="~/@ViewBag.B.PicUrl" name="PicUrl" type="hidden" />

            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <img id="imgPhoto" src="~/@ViewBag.B.PicUrl"  class="layui-upload-img" style="width:180px; height:140px" />

            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">所属文章</label>
            <div class="layui-input-block">
                <select name="BelongToArticles" id="BelongToArticles">
                    <option value="">--请选择--</option>

                    @{
                        foreach (var item in ViewBag.A)
                        {
                            if (item.Id == ViewBag.B.BelongToArticles)
                            {
                                <option value="@item.Id" selected>@item.Title</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Title</option>
                            }


                        }
                    }
                </select>
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">内容</label>
            <div class="layui-input-block">
                <textarea id="Cont" name="Cont" lay-verify="content" style="display: none;">
                    @ViewBag.B.Cont
                </textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
    <script src="~/Areas/Admin/lib/layui/layui.js" charset="utf-8"></script>
    <script src="~/Areas/Admin/js/x-layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form', 'layedit', 'upload'], function () {
            var $ = layui.jquery;
            var form = layui.form;
            var upload = layui.upload;
            var layedit = layui.layedit;
            //富文本编辑器
            var editIndex = layedit.build('Cont'); //建立编辑器
            form.verify({
                content: function (value) {
                    layedit.sync(editIndex);
                }
            });

            //图片上传
            upload.render({
                elem: '#uploadImg',
                url: '/Admin/Article/UploadPhoto',
                done: function (res, index, upload) {
                    if (res.success) {
                        $("#PicUrl").val(res.remark);
                        $("#imgPhoto").attr("src", "/" + res.remark);
                        layer.msg("上传成功");
                    }
                    else
                        layer.msg("上传失败:" + res.message);
                }
            })

            //监听提交
            form.on('submit(formDemo)', function (data) {


                $.post("/Admin/Gallery/Edit", data.field, function (res) {
                    if (res.success) //服务器端返回的 json 数据中，会有 success、message 等属性
                    {
                        layer.msg(res.message, { time: 5000, icon: 6 }); //用弹窗的方式来进行提示
                        // 获得frame索引
                        var index = parent.layer.getFrameIndex(window.name);
                        //关闭当前frame
                        parent.layer.close(index);
                    }
                    else
                        layer.msg(res.message, { time: 5000, icon: 6 }); //用弹窗的方式来进行提示
                }, "json");
                return false;
            });




        });


    </script>
</body>
</html>
